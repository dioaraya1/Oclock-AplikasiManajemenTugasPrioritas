{
  "name": "oclock",
  "version": "1.0.0",
  "description": "O'Clock - Aplikasi manajemen tugas prioritas",
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "sass": "^1.94.0",
    "tailwindcss": "3.4"
  },
  "scripts": {
    "tw-main": "tailwindcss -i ./src/css/main.css -o ./public/css/main.build.css --watch",
    "dev": "npx npm-run-all --parallel tw-main",
    "build": "tailwindcss -i ./src/css/main.css -o ./public/css/main.build.css --minify"
  }
}
